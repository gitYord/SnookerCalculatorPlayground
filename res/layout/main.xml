<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:orientation="vertical"
			  android:weightSum="1">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Player 1"
				android:id="@+id/player1Text"
				android:layout_row="0"
				android:layout_column="0"
				android:layout_weight="1"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Player 2"
				android:id="@+id/player2Text"
				android:layout_row="0"
				android:layout_column="1"
				android:layout_weight="1"
				android:gravity="right"/>

	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="red"
				android:id="@+id/redPlayer1Button"
				android:layout_row="1"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="red"
				android:id="@+id/redPlayer2Button"
				android:layout_row="1"
				android:layout_column="1"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="yellow"
				android:id="@+id/yellowPlayer1Button"
				android:layout_row="2"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="yellow"
				android:id="@+id/yellowPlayer2Button"
				android:layout_row="2"
				android:layout_column="1"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>

	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="green"
				android:id="@+id/greenPlayer1button"
				android:layout_row="3"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="green"
				android:id="@+id/greenPlayer2Button"
				android:layout_row="3"
				android:layout_column="1"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="brown"
				android:id="@+id/brownPlayer1Button"
				android:layout_row="4"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="brown"
				android:id="@+id/brownPlayer2Button"
				android:layout_row="4"
				android:layout_column="1"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="blue"
				android:id="@+id/bluePlayer1Button"
				android:layout_row="5"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="blue"
				android:id="@+id/bluePlayer2Button"
				android:layout_row="5"
				android:layout_column="1"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="pink"
				android:id="@+id/pinkPlayer1Button"
				android:layout_row="6"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="pink"
				android:id="@+id/pinkPlayer2Button"
				android:layout_row="6"
				android:layout_column="1"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="black"
				android:id="@+id/blackPlayer1Button"
				android:layout_row="7"
				android:layout_column="0"
				android:onClick="@string/calcResultPlayer1"
				android:layout_gravity="fill_horizontal"
				android:layout_weight="1"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="black"
				android:id="@+id/blackPlayer2Button"
				android:layout_row="7"
				android:layout_column="1"
				android:layout_gravity="fill_horizontal|right"
				android:onClick="@string/calcResultPlayer2"
				android:layout_weight="1"/>
	</LinearLayout>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/remainingPointsTextView"/>

</LinearLayout>

